<document xmlns="http://maven.apache.org/changes/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
	<properties>
		<title>Project Changes</title>
		<author email="programming@wandrell.com">Bernardo Mart√≠nez Garrido</author>
	</properties>
	<body>
		<release version="0.1.0" date="2015-08-18" description="First release">
			<action dev="bmg" type="add">
				First release of the library.
			</action>
		</release>
		<release version="0.2.0" date="2015-08-19" description="Classpath changes">
			<action dev="bmg" type="update">
				Changed the components classpath.
			</action>
		</release>
		<release version="0.2.1" date="2015-08-19" description="Missing features">
			<action dev="bmg" type="add">
				It is now possible to set the implant
				for an AdvancementUnit.
			</action>
		</release>
		<release version="0.3.0" date="2015-08-20" description="Availability changes">
			<action dev="bmg" type="update">
				Changed some method names for
				availability interfaces methods.
			</action>
		</release>
		<release version="0.3.1" date="2015-08-20" description="Various fixes">
			<action dev="bmg" type="fix">
				Corrected Maven Central links.
			</action>
		</release>
		<release version="0.3.2" date="2015-09-05" description="Typo correction">
			<action dev="bmg" type="fix">
				Corrected a typo on the Sponsor
				interface.
			</action>
		</release>
		<release version="0.3.3" date="2015-09-07" description="Typo correction">
			<action dev="bmg" type="fix">
				Corrected a typo on the Sponsor
				interface.
			</action>
		</release>
		<release version="0.3.4" date="2015-10-13" description="Added missing feature">
			<action dev="bmg" type="add">
				Affinity units were missing the hated
				affinities list.
			</action>
		</release>
		<release version="0.3.5" date="2015-10-16" description="Maven Site Skin">
			<action dev="bmg" type="update">
				Updated Maven Site Skin.
			</action>
		</release>
		<release version="0.4.0" date="2015-10-22" description="Method name changes">
			<action dev="bmg" type="fix">
				All the name query methods are now
				named the same way.
			</action>
			<action dev="bmg" type="fix">
				The TeamTypeAssetsAvailability class
				methods are now using the singular.
			</action>
			<action dev="bmg" type="update">
				Assets availability interfaces are now
				in the assets package.
			</action>
			<action dev="bmg" type="update">
				Renamed the Unit interface to
				UnitTemplate.
			</action>
			<action dev="bmg" type="update">
				Renamed the Team interface to
				BaseTeam.
			</action>
			<action dev="bmg" type="update">
				Renamed the BaseTeam dice method to
				coachingDice methods.
			</action>
			<action dev="bmg" type="update">
				Updated docs.
			</action>
			<action dev="bmg" type="update">
				Updated javadocs.
			</action>
			<action dev="bmg" type="add">
				It is now possible to give a name to he
				sponsors.
			</action>
			<action dev="bmg" type="add">
				The AdvancementUnit and AffinityUnit
				interfaces now allow giving a name to the units.
			</action>
			<action dev="bmg" type="add">
				Added the keeper team position role.
			</action>
			<action dev="bmg" type="add">
				Added documentation page for
				availabilities.
			</action>
		</release>
		<release version="0.4.1" date="2015-11-22" description="Updated configuration">
			<action dev="bmg" type="update">
				Updated project configuration.
			</action>
		</release>
        <release version="0.4.2" date="2015-12-08" description="Added base POM">
            <action dev="bmg" type="update">
                Added base POM.
            </action>
        </release>
        <release version="0.5.0" date="2016-06-05" description="Reworked API">
            <action dev="bmg" type="update">
                Renamed interfaces for clarity.
            </action>
            <action dev="bmg" type="update">
                Updated project configuration.
            </action>
            <action dev="bmg" type="add">
                The API now handles team seasons.
            </action>
            <action dev="bmg" type="add">
                DBX unit groups are now handled through the availabilities.
            </action>
        </release>
        <release version="0.5.1" date="2016-06-08" description="Corrected components">
            <action dev="bmg" type="fix">
                Corrected the name of a method in the Component interface.
            </action>
        </release>
        <release version="0.6.0" date="2016-06-19" description="MVP changes">
            <action dev="bmg" type="update">
                The MVPs are now handled through the Unit interface.
            </action>
        </release>
        <release version="0.6.1" date="2016-07-13" description="API corrections">
            <action dev="bmg" type="update">
                Teams now allow adding units without giving a specific position.
            </action>
        </release>
	</body>
</document>